<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/logo"
        android:layout_width="413dp"
        android:layout_height="51dp"
        android:ems="10"
        android:inputType="text"
        android:text="HARKKATTYÖ"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/ADDPKMON"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/ADDPKMON"
        android:layout_width="335dp"
        android:layout_height="92dp"
        android:layout_marginBottom="32dp"
        android:text="LISÄÄ UUSI PKMON"
        app:layout_constraintBottom_toTopOf="@+id/LISTPKMON"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/LISTPKMON"
        android:layout_width="335dp"
        android:layout_height="92dp"
        android:text="LISTAA PKMONIT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="209dp" />

    <Button
        android:id="@+id/MOVEPKMON"
        android:layout_width="335dp"
        android:layout_height="92dp"
        android:text="SIIRRÄ PKMONEJA"
        app:layout_constraintBottom_toTopOf="@+id/GOTOFIGHT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LISTPKMON"
        app:layout_constraintVertical_bias="0.098" />

    <Button
        android:id="@+id/GOTOFIGHT"
        android:layout_width="335dp"
        android:layout_height="92dp"
        android:layout_marginBottom="48dp"
        android:text="PAINIMAAN"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>